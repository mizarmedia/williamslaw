---
interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Ready to Talk About Your Case?",
  subtitle = "Get a free, confidential consultation. No pressure, just honest advice about your options."
} = Astro.props;
---

<section class="py-8 md:py-16 bg-navy-900 text-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="font-[family-name:var(--font-display)] text-xl md:text-3xl font-bold mb-3">
      {title}
    </h2>
    <p class="text-base text-gray-300 mb-6 max-w-2xl mx-auto">
      {subtitle}
    </p>

    <div class="flex flex-col sm:flex-row gap-3 justify-center">
      <a
        href="/contact/"
        class="btn-animate inline-flex items-center justify-center px-5 py-3 md:px-8 md:py-4 bg-gold-500 hover:bg-gold-400 text-navy-900 font-bold rounded text-sm md:text-base"
      >
        Schedule Free Consultation
      </a>
      <a
        href="tel:+12082715469"
        class="btn-animate inline-flex items-center justify-center px-5 py-3 md:px-8 md:py-4 border-2 border-white/30 hover:border-white/60 text-white font-semibold rounded text-sm md:text-base"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        Call (208) 271-5469
      </a>
    </div>
  </div>
</section>
