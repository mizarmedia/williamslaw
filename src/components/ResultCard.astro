---
interface Props {
  amount: string;
  type: string;
  description: string;
  category: string;
  featured?: boolean;
}

const { amount, type, description, category, featured = false } = Astro.props;
---

{featured ? (
  <div class="bg-navy-900 text-white p-4 md:p-8 rounded-xl shadow-xl">
    <div class="flex flex-col md:flex-row md:items-center gap-4 md:gap-8">
      <div class="flex-shrink-0 text-center md:text-left">
        <span class="inline-block px-3 py-1 bg-gold-500/20 text-gold-400 text-xs font-semibold uppercase tracking-wide rounded-full mb-2">
          {category}
        </span>
        <div class="font-[family-name:var(--font-display)] text-2xl md:text-4xl font-bold text-gold-500 mb-1">
          {amount}
        </div>
        <div class="text-gold-400 font-semibold uppercase tracking-wide text-sm">
          {type}
        </div>
      </div>
      <div class="flex-1">
        <p class="text-sm md:text-base text-gray-200 leading-relaxed">
          {description}
        </p>
      </div>
    </div>
  </div>
) : (
  <div class="bg-white p-3 md:p-6 rounded-lg shadow-sm border border-gray-100 hover:border-gold-500/30 card-lift">
    <span class="inline-block px-2 py-0.5 bg-gold-500/10 text-gold-500 text-xs font-semibold uppercase tracking-wide rounded-full mb-2">
      {category}
    </span>
    <div class="font-[family-name:var(--font-display)] text-lg md:text-2xl font-bold text-navy-900 mb-0.5">
      {amount}
    </div>
    <div class="text-gold-500 font-semibold uppercase tracking-wide text-xs mb-2">
      {type}
    </div>
    <p class="text-text-gray text-xs md:text-sm leading-relaxed">
      {description}
    </p>
  </div>
)}
