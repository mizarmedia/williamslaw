---
interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const practiceAreas = {
  criminal: {
    label: 'Criminal Defense',
    href: '/criminal-defense/',
    items: [
      { href: '/criminal-defense/dui/', label: 'DUI Defense' },
      { href: '/criminal-defense/felonies/', label: 'Felony Charges' },
      { href: '/criminal-defense/domestic-violence/', label: 'Domestic Violence' }
    ]
  },
  family: {
    label: 'Family Law',
    href: '/family-law/',
    items: [
      { href: '/family-law/divorce/', label: 'Divorce' },
      { href: '/family-law/custody/', label: 'Child Custody' },
      { href: '/family-law/child-support/', label: 'Child Support' }
    ]
  },
  civil: {
    label: 'Civil Litigation',
    href: '/civil-litigation/',
    items: []
  }
};

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/results/', label: 'Results' },
  { href: '/about/', label: 'About Matt' },
  { href: '/faq/', label: 'FAQ' },
  { href: '/contact/', label: 'Contact' }
];

const isActive = (href: string) => {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
};
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm transition-shadow duration-300">
  <!-- Top Row: Logo and Phone -->
  <div class="bg-navy-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-14 md:h-16">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3">
          <span class="font-[family-name:var(--font-display)] text-2xl md:text-3xl font-bold text-white">
            Williams<span class="text-gold-500">Law</span>
          </span>
        </a>

        <!-- Phone & CTA (Desktop) -->
        <div class="hidden md:flex items-center gap-6">
          <a href="tel:+12082715469" class="flex items-center gap-2 text-white hover:text-gold-300 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span class="font-semibold">(208) 271-5469</span>
          </a>
          <a
            href="/contact/"
            class="inline-flex items-center px-6 py-2.5 bg-gold-500 hover:bg-gold-400 text-navy-900 font-bold text-sm rounded transition-colors uppercase tracking-wide"
          >
            Free Consultation
          </a>
        </div>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 text-white"
          aria-label="Open menu"
        >
          <svg id="menu-icon-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="menu-icon-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Bottom Row: Navigation (Desktop) -->
  <nav class="hidden md:block bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-center h-12 gap-1">
        <!-- Home -->
        <a
          href="/"
          class:list={[
            "px-4 py-2 text-sm font-medium transition-colors rounded",
            isActive('/') ? "text-gold-500 bg-gold-500/10" : "text-navy-900 hover:text-gold-500 hover:bg-gray-50"
          ]}
        >
          Home
        </a>

        <!-- Practice Areas Dropdown -->
        <div class="relative group">
          <button
            class:list={[
              "px-4 py-2 text-sm font-medium transition-colors rounded flex items-center gap-1",
              (currentPath.includes('criminal') || currentPath.includes('family') || currentPath.includes('civil'))
                ? "text-gold-500 bg-gold-500/10"
                : "text-navy-900 hover:text-gold-500 hover:bg-gray-50"
            ]}
          >
            Practice Areas
            <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>

          <!-- Mega Dropdown -->
          <div class="absolute left-1/2 -translate-x-1/2 top-full pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <div class="bg-white rounded-lg shadow-xl border border-gray-200 p-6 min-w-[600px]">
              <div class="grid grid-cols-3 gap-6">
                <!-- Criminal Defense -->
                <div>
                  <a href={practiceAreas.criminal.href} class="block font-semibold text-navy-900 hover:text-gold-500 mb-3 pb-2 border-b border-gray-100">
                    {practiceAreas.criminal.label}
                  </a>
                  <ul class="space-y-2">
                    {practiceAreas.criminal.items.map(item => (
                      <li>
                        <a href={item.href} class="block text-sm text-text-gray hover:text-gold-500 transition-colors py-1">
                          {item.label}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>

                <!-- Family Law -->
                <div>
                  <a href={practiceAreas.family.href} class="block font-semibold text-navy-900 hover:text-gold-500 mb-3 pb-2 border-b border-gray-100">
                    {practiceAreas.family.label}
                  </a>
                  <ul class="space-y-2">
                    {practiceAreas.family.items.map(item => (
                      <li>
                        <a href={item.href} class="block text-sm text-text-gray hover:text-gold-500 transition-colors py-1">
                          {item.label}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>

                <!-- Civil Litigation -->
                <div>
                  <a href={practiceAreas.civil.href} class="block font-semibold text-navy-900 hover:text-gold-500 mb-3 pb-2 border-b border-gray-100">
                    {practiceAreas.civil.label}
                  </a>
                  <p class="text-sm text-text-gray">
                    Employment disputes, civil rights cases, and more.
                  </p>
                </div>
              </div>

              <!-- Bottom CTA -->
              <div class="mt-6 pt-4 border-t border-gray-100 flex items-center justify-between">
                <p class="text-sm text-text-gray">Not sure which area applies to you?</p>
                <a href="/contact/" class="text-sm font-semibold text-gold-500 hover:text-gold-400">
                  Get a Free Case Review â†’
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Other Nav Links -->
        {navLinks.slice(1).map(link => (
          <a
            href={link.href}
            class:list={[
              "px-4 py-2 text-sm font-medium transition-colors rounded",
              isActive(link.href) ? "text-gold-500 bg-gold-500/10" : "text-navy-900 hover:text-gold-500 hover:bg-gray-50"
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200 max-h-[calc(100vh-56px)] overflow-y-auto">
    <div class="px-4 py-4 space-y-1">
      <!-- Home -->
      <a
        href="/"
        class:list={[
          "block py-3 px-4 rounded font-medium",
          isActive('/') ? "text-gold-500 bg-gold-500/10" : "text-navy-900"
        ]}
      >
        Home
      </a>

      <!-- Practice Areas (Collapsible) -->
      <div class="border-t border-gray-100 pt-2 mt-2">
        <button
          id="mobile-practice-toggle"
          class="w-full flex items-center justify-between py-3 px-4 text-navy-900 font-medium"
        >
          Practice Areas
          <svg id="mobile-practice-icon" class="w-5 h-5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>

        <div id="mobile-practice-menu" class="hidden pl-4 pb-2 space-y-1">
          <!-- Criminal Defense -->
          <div class="py-2">
            <a href="/criminal-defense/" class="block py-2 px-4 text-navy-900 font-semibold">Criminal Defense</a>
            {practiceAreas.criminal.items.map(item => (
              <a href={item.href} class="block py-2 px-4 pl-8 text-text-gray text-sm">{item.label}</a>
            ))}
          </div>

          <!-- Family Law -->
          <div class="py-2 border-t border-gray-100">
            <a href="/family-law/" class="block py-2 px-4 text-navy-900 font-semibold">Family Law</a>
            {practiceAreas.family.items.map(item => (
              <a href={item.href} class="block py-2 px-4 pl-8 text-text-gray text-sm">{item.label}</a>
            ))}
          </div>

          <!-- Civil Litigation -->
          <div class="py-2 border-t border-gray-100">
            <a href="/civil-litigation/" class="block py-2 px-4 text-navy-900 font-semibold">Civil Litigation</a>
          </div>
        </div>
      </div>

      <!-- Other Nav Links -->
      {navLinks.slice(1).map(link => (
        <a
          href={link.href}
          class:list={[
            "block py-3 px-4 rounded font-medium border-t border-gray-100",
            isActive(link.href) ? "text-gold-500 bg-gold-500/10" : "text-navy-900"
          ]}
        >
          {link.label}
        </a>
      ))}

      <!-- Mobile CTA -->
      <div class="pt-4 mt-4 border-t border-gray-200 space-y-3">
        <a href="tel:+12082715469" class="flex items-center justify-center gap-2 py-3 text-navy-900 font-semibold">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          (208) 271-5469
        </a>
        <a
          href="/contact/"
          class="block text-center py-3 bg-gold-500 hover:bg-gold-400 text-navy-900 font-bold rounded transition-colors"
        >
          Free Consultation
        </a>
      </div>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-14 md:h-20"></div>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIconOpen = document.getElementById('menu-icon-open');
  const menuIconClose = document.getElementById('menu-icon-close');
  const header = document.getElementById('header');
  const mobilePracticeToggle = document.getElementById('mobile-practice-toggle');
  const mobilePracticeMenu = document.getElementById('mobile-practice-menu');
  const mobilePracticeIcon = document.getElementById('mobile-practice-icon');

  // Toggle mobile menu
  mobileMenuBtn?.addEventListener('click', () => {
    const isOpen = !mobileMenu?.classList.contains('hidden');
    mobileMenu?.classList.toggle('hidden');
    menuIconOpen?.classList.toggle('hidden');
    menuIconClose?.classList.toggle('hidden');
  });

  // Toggle practice areas submenu
  mobilePracticeToggle?.addEventListener('click', () => {
    mobilePracticeMenu?.classList.toggle('hidden');
    mobilePracticeIcon?.classList.toggle('rotate-180');
  });

  // Close mobile menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuIconOpen?.classList.remove('hidden');
      menuIconClose?.classList.add('hidden');
    });
  });

  // Add shadow on scroll
  window.addEventListener('scroll', () => {
    if (window.scrollY > 10) {
      header?.classList.add('shadow-lg');
    } else {
      header?.classList.remove('shadow-lg');
    }
  });
</script>
