<section id="contact" class="py-8 md:py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-6 md:gap-10">
      <!-- Left Column - CTA -->
      <div class="fade-in">
        <span class="inline-block px-3 py-0.5 bg-gold-500/10 text-gold-500 text-xs font-semibold uppercase tracking-wide rounded-full mb-3">
          Free Consultation
        </span>
        <h2 class="font-[family-name:var(--font-display)] text-xl md:text-3xl lg:text-4xl font-bold text-navy-900 mb-3">
          Ready to Talk About Your Case?
        </h2>
        <p class="text-sm text-text-gray mb-4 md:mb-6">
          Every successful case starts with a conversation. Get honest, no-pressure advice about your options.
        </p>

        <div class="space-y-2 md:space-y-3 mb-4 md:mb-6">
          <a
            href="tel:+12082715469"
            class="flex items-center gap-3 p-3 bg-offwhite rounded-lg hover:bg-gold-500/10 transition-colors group"
          >
            <div class="w-10 h-10 bg-gold-500 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-navy-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <div class="font-bold text-navy-900 text-sm md:text-base group-hover:text-gold-500 transition-colors">
                (208) 271-5469
              </div>
              <div class="text-xs text-text-gray">Call or text anytime</div>
            </div>
          </a>

          <a
            href="mailto:matt@mattwilliams.law"
            class="flex items-center gap-3 p-3 bg-offwhite rounded-lg hover:bg-gold-500/10 transition-colors group"
          >
            <div class="w-10 h-10 bg-navy-900 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <div class="font-bold text-navy-900 text-sm group-hover:text-gold-500 transition-colors">
                matt@mattwilliams.law
              </div>
              <div class="text-xs text-text-gray">Email for non-urgent matters</div>
            </div>
          </a>

          <div class="flex items-start gap-3 p-3 bg-offwhite rounded-lg">
            <div class="w-10 h-10 bg-navy-900 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <div class="font-bold text-navy-900 text-sm">Eagle Office</div>
              <div class="text-xs text-text-gray">
                839 E. Winding Creek Dr, Ste 200, Eagle, ID 83616
              </div>
            </div>
          </div>
        </div>

        <a
          href="/contact/"
          class="btn-animate inline-flex items-center px-5 py-2.5 bg-gold-500 hover:bg-gold-400 text-navy-900 font-bold text-sm rounded"
        >
          Schedule Free Consultation
          <svg class="w-4 h-4 ml-2 arrow-slide" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>

      <!-- Right Column - Quick Form -->
      <div class="fade-in" style="transition-delay: 100ms">
        <div class="bg-navy-900 rounded-lg p-4 md:p-6">
          <h3 class="font-[family-name:var(--font-display)] text-lg md:text-xl font-bold text-white mb-3">
            Request a Callback
          </h3>
          <p class="text-gray-300 text-sm mb-4">
            Leave your info and Matt will get back to you within one business day.
          </p>

          <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-3">
            <div>
              <input
                type="text"
                name="name"
                required
                placeholder="Your Name"
                class="w-full px-3 py-2.5 bg-white/10 border border-white/20 rounded text-white text-sm placeholder-gray-400 focus:ring-2 focus:ring-gold-500 focus:border-gold-500 outline-none transition-colors"
              />
            </div>
            <div>
              <input
                type="tel"
                name="phone"
                required
                placeholder="Phone Number"
                class="w-full px-3 py-2.5 bg-white/10 border border-white/20 rounded text-white text-sm placeholder-gray-400 focus:ring-2 focus:ring-gold-500 focus:border-gold-500 outline-none transition-colors"
              />
            </div>
            <div>
              <select
                name="case-type"
                required
                class="w-full px-3 py-2.5 bg-white/10 border border-white/20 rounded text-white text-sm focus:ring-2 focus:ring-gold-500 focus:border-gold-500 outline-none transition-colors"
              >
                <option value="" class="text-gray-900">Type of Case</option>
                <option value="Criminal" class="text-gray-900">Criminal Defense</option>
                <option value="Family" class="text-gray-900">Family Law</option>
                <option value="Civil" class="text-gray-900">Civil Litigation</option>
                <option value="Other" class="text-gray-900">Other / Not Sure</option>
              </select>
            </div>
            <div class="hidden md:block">
              <textarea
                name="message"
                rows="2"
                placeholder="Brief description (optional)"
                class="w-full px-3 py-2.5 bg-white/10 border border-white/20 rounded text-white text-sm placeholder-gray-400 focus:ring-2 focus:ring-gold-500 focus:border-gold-500 outline-none transition-colors resize-none"
              ></textarea>
            </div>
            <button
              type="submit"
              class="btn-animate w-full px-5 py-3 bg-gold-500 hover:bg-gold-400 text-navy-900 font-bold text-sm rounded"
            >
              Request Callback
            </button>
          </form>

          <p class="text-xs text-gray-400 mt-3">
            Your information is confidential. Submitting this form does not create an attorney-client relationship.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
