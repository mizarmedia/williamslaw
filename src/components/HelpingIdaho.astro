---
const counties = [
  'Ada County',
  'Canyon County',
  'Valley County',
  'Gem County',
  'Boise County',
  'Elmore County'
];

const cities = [
  'Eagle',
  'Boise',
  'Meridian',
  'Nampa',
  'Caldwell',
  'McCall',
  'Cascade',
  'Garden City'
];
---

<section class="py-8 md:py-20 bg-navy-900 text-white relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
      <defs>
        <pattern id="topo-idaho" x="0" y="0" width="100" height="100" patternUnits="userSpaceOnUse">
          <path d="M0 50 Q25 30 50 50 T100 50" stroke="currentColor" fill="none" stroke-width="0.5" opacity="0.5"/>
          <path d="M0 30 Q25 10 50 30 T100 30" stroke="currentColor" fill="none" stroke-width="0.5" opacity="0.3"/>
          <path d="M0 70 Q25 50 50 70 T100 70" stroke="currentColor" fill="none" stroke-width="0.5" opacity="0.3"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#topo-idaho)"/>
    </svg>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-6 md:gap-10 items-center">
      <!-- Left Content -->
      <div class="fade-in">
        <span class="inline-block px-3 py-0.5 bg-gold-500/20 text-gold-400 text-xs font-semibold uppercase tracking-wide rounded-full mb-3 md:mb-4">
          Serving Idaho
        </span>
        <h2 class="font-[family-name:var(--font-display)] text-xl md:text-3xl lg:text-4xl font-bold mb-3 md:mb-4">
          Helping Idaho Families for <span class="text-gold-500">24+ Years</span>
        </h2>
        <p class="text-sm md:text-base text-gray-300 mb-4 md:mb-6">
          Matt isn't a big-city lawyer who doesn't understand Idaho. He coached high school football in Cascade, raised his family here, and served as prosecutor for Valley County. When he takes your case, he's helping his neighbor.
        </p>

        <div class="grid grid-cols-3 gap-2 md:gap-4 mb-4 md:mb-6">
          <div class="text-center">
            <div class="font-[family-name:var(--font-display)] text-2xl md:text-3xl font-bold text-gold-500">6+</div>
            <div class="text-xs text-gray-400">Counties</div>
          </div>
          <div class="text-center">
            <div class="font-[family-name:var(--font-display)] text-2xl md:text-3xl font-bold text-gold-500">9</div>
            <div class="text-xs text-gray-400">Years Prosecutor</div>
          </div>
          <div class="text-center">
            <div class="font-[family-name:var(--font-display)] text-2xl md:text-3xl font-bold text-gold-500">1000s</div>
            <div class="text-xs text-gray-400">Families Helped</div>
          </div>
        </div>

        <a
          href="/about/"
          class="inline-flex items-center text-gold-400 hover:text-gold-300 font-semibold text-sm transition-colors"
        >
          Learn More About Matt
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>

      <!-- Right Content - Areas Served -->
      <div class="fade-in" style="transition-delay: 100ms">
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 md:p-6">
          <h3 class="font-semibold text-base mb-4">Areas Served</h3>

          <div class="mb-4">
            <h4 class="text-gold-400 text-xs uppercase tracking-wide mb-2">Counties</h4>
            <div class="flex flex-wrap gap-1.5">
              {counties.map(county => (
                <span class="px-2 py-0.5 bg-white/10 rounded-full text-xs">{county}</span>
              ))}
            </div>
          </div>

          <div>
            <h4 class="text-gold-400 text-xs uppercase tracking-wide mb-2">Cities</h4>
            <div class="flex flex-wrap gap-1.5">
              {cities.map(city => (
                <span class="px-2 py-0.5 bg-white/10 rounded-full text-xs">{city}</span>
              ))}
            </div>
          </div>

          <div class="mt-4 pt-4 border-t border-white/20">
            <p class="text-gray-300 text-xs">
              Don't see your area? Matt handles cases throughout Idaho.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
