<section id="contact" class="py-20 md:py-28 bg-offwhite">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16 fade-in">
      <h2 class="font-[family-name:var(--font-display)] text-3xl md:text-4xl lg:text-5xl font-bold text-navy-900 mb-4">
        Get Your Free Consultation
      </h2>
      <p class="text-lg text-text-gray max-w-2xl mx-auto">
        Take the first step. Contact us today for a confidential consultation about your case.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
      <!-- Contact Form -->
      <div class="bg-white p-8 rounded-lg shadow-sm border border-gray-100 fade-in">
        <form action="#" method="POST" class="space-y-6">
          <div class="grid sm:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-navy-900 mb-2">
                Full Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-gold-500 outline-none transition-colors"
                placeholder="John Smith"
              />
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-navy-900 mb-2">
                Phone Number *
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-gold-500 outline-none transition-colors"
                placeholder="(208) 555-0123"
              />
            </div>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-navy-900 mb-2">
              Email Address *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-gold-500 outline-none transition-colors"
              placeholder="john@example.com"
            />
          </div>

          <div>
            <label for="case-type" class="block text-sm font-medium text-navy-900 mb-2">
              Case Type
            </label>
            <select
              id="case-type"
              name="case-type"
              class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-gold-500 outline-none transition-colors bg-white"
            >
              <option value="">Select a practice area...</option>
              <option value="criminal">Criminal Defense</option>
              <option value="family">Family Law</option>
              <option value="civil">Civil Litigation</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-navy-900 mb-2">
              Brief Description of Your Situation
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-gold-500 outline-none transition-colors resize-none"
              placeholder="Please provide a brief overview of your legal matter..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full px-8 py-4 bg-gold-500 hover:bg-gold-400 text-navy-900 font-bold text-lg rounded-lg transition-colors"
          >
            Request Free Consultation
          </button>

          <p class="text-xs text-text-gray text-center">
            Your information is confidential and protected by attorney-client privilege.
          </p>
        </form>
      </div>

      <!-- Contact Info & Map -->
      <div class="space-y-8 fade-in" style="transition-delay: 200ms">
        <!-- Contact Cards -->
        <div class="space-y-4">
          <!-- Phone -->
          <a href="tel:+12082715469" class="flex items-center gap-4 p-4 bg-white rounded-lg border border-gray-100 hover:border-gold-500/50 transition-colors group">
            <div class="w-12 h-12 flex items-center justify-center bg-navy-900 text-gold-500 rounded-lg group-hover:bg-gold-500 group-hover:text-navy-900 transition-colors">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <div class="text-sm text-text-gray">Call Us</div>
              <div class="text-lg font-semibold text-navy-900">(208) 271-5469</div>
            </div>
          </a>

          <!-- Email -->
          <a href="mailto:matt@mattwilliams.law" class="flex items-center gap-4 p-4 bg-white rounded-lg border border-gray-100 hover:border-gold-500/50 transition-colors group">
            <div class="w-12 h-12 flex items-center justify-center bg-navy-900 text-gold-500 rounded-lg group-hover:bg-gold-500 group-hover:text-navy-900 transition-colors">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <div class="text-sm text-text-gray">Email Us</div>
              <div class="text-lg font-semibold text-navy-900">matt@mattwilliams.law</div>
            </div>
          </a>

          <!-- Address -->
          <div class="flex items-start gap-4 p-4 bg-white rounded-lg border border-gray-100">
            <div class="w-12 h-12 flex items-center justify-center bg-navy-900 text-gold-500 rounded-lg shrink-0">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <div class="text-sm text-text-gray">Visit Our Office</div>
              <div class="font-semibold text-navy-900">839 E. Winding Creek Dr, Ste 200</div>
              <div class="text-text-gray">Eagle, ID 83616</div>
            </div>
          </div>

          <!-- Hours -->
          <div class="flex items-start gap-4 p-4 bg-white rounded-lg border border-gray-100">
            <div class="w-12 h-12 flex items-center justify-center bg-navy-900 text-gold-500 rounded-lg shrink-0">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <div class="text-sm text-text-gray">Office Hours</div>
              <div class="font-semibold text-navy-900">Monday - Friday</div>
              <div class="text-text-gray">9:00 AM - 5:00 PM</div>
            </div>
          </div>
        </div>

        <!-- Map -->
        <div class="rounded-lg overflow-hidden border border-gray-100 h-64">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2885.5!2d-116.353!3d43.6959!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x54aef8c5b5b5b5b5%3A0x0!2s839%20E%20Winding%20Creek%20Dr%2C%20Eagle%2C%20ID%2083616!5e0!3m2!1sen!2sus!4v1234567890"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Williams Law Office Location"
          ></iframe>
        </div>
      </div>
    </div>
  </div>
</section>
