<section id="home" class="relative min-h-screen flex items-center pt-14 md:pt-16">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img
      src="/images/eagle-hills.jpg"
      alt="Rolling hills of Eagle, Idaho"
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-navy-900/95 via-navy-900/85 to-navy-900/70"></div>
  </div>

  <!-- Topographic Pattern Overlay -->
  <div class="absolute inset-0 z-[1] opacity-30 topo-bg"></div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10 md:py-24">
    <div class="max-w-3xl">
      <!-- Trust Badges -->
      <div class="flex flex-wrap gap-2 mb-4 md:mb-6">
        <span class="hero-animate delay-1 inline-flex items-center px-2 py-0.5 bg-white/10 backdrop-blur-sm text-white/90 text-xs rounded-full border border-white/20">
          Licensed Since 2000
        </span>
        <span class="hero-animate delay-2 inline-flex items-center px-2 py-0.5 bg-white/10 backdrop-blur-sm text-white/90 text-xs rounded-full border border-white/20">
          Eagle, Idaho
        </span>
      </div>

      <!-- Headline -->
      <h1 class="hero-animate delay-3 font-[family-name:var(--font-display)] text-2xl sm:text-3xl md:text-5xl lg:text-6xl font-bold text-white leading-tight mb-3 md:mb-6">
        Former Prosecutor.
        <span class="block text-gold-400">Now Your Defender.</span>
      </h1>

      <!-- Subheadline -->
      <p class="hero-animate delay-4 text-base md:text-xl text-white/80 mb-6 md:mb-10 max-w-2xl">
        24+ years of courtroom experience protecting Idaho families in criminal defense, family law, and civil litigation.
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-3">
        <a
          href="/contact/"
          class="hero-animate delay-5 btn-animate inline-flex items-center justify-center px-5 py-3 md:px-8 md:py-4 bg-gold-500 hover:bg-gold-400 text-navy-900 font-bold text-sm md:text-base rounded"
        >
          Get Your Free Case Review
          <svg class="w-4 h-4 ml-2 arrow-slide" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a
          href="tel:+12082715469"
          class="hero-animate delay-6 btn-animate inline-flex items-center justify-center px-5 py-3 md:px-8 md:py-4 bg-transparent border-2 border-white/30 hover:border-white/50 text-white font-semibold text-sm md:text-base rounded"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          (208) 271-5469
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator (hidden on mobile) -->
  <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 z-10 animate-bounce hidden md:block">
    <a href="#problem" class="text-white/50 hover:text-white/80 transition-colors">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>
