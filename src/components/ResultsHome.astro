---
const results = [
  {
    amount: '$400,000',
    type: 'Jury Verdict',
    description: 'Federal jury verdict for wrongfully terminated McCall Police Chief.',
    category: 'Wrongful Termination'
  },
  {
    amount: 'Mid-Six Figures',
    type: 'Settlement',
    description: 'Settlement against Southwest Airlines for employment violations.',
    category: 'Employment'
  },
  {
    amount: 'Settlement',
    type: 'Civil Rights',
    description: 'Settlement against Middleton Police for civil rights violations.',
    category: 'Civil Rights'
  },
  {
    amount: 'Charges Reduced',
    type: 'DUI Defense',
    description: 'Client kept driving privileges after serious DUI charges.',
    category: 'Criminal'
  },
  {
    amount: 'Case Dismissed',
    type: 'Felony Defense',
    description: 'Felony charges thrown out due to evidence problems.',
    category: 'Criminal'
  },
  {
    amount: 'Full Custody',
    type: 'Family Law',
    description: 'Parent awarded full custody to protect children.',
    category: 'Custody'
  }
];
---

<section id="results" class="py-8 md:py-20 bg-offwhite">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-6 md:mb-10 fade-in">
      <span class="inline-block px-3 py-0.5 bg-gold-500/10 text-gold-500 text-xs font-semibold uppercase tracking-wide rounded-full mb-2">
        Real Results
      </span>
      <h2 class="font-[family-name:var(--font-display)] text-xl md:text-3xl lg:text-4xl font-bold text-navy-900 mb-2">
        Results That Speak for Themselves
      </h2>
      <p class="text-sm md:text-base text-text-gray max-w-2xl mx-auto">
        While other lawyers talk about experience, Matt shows you outcomes.
      </p>
    </div>

    <!-- Stats Bar -->
    <div class="bg-navy-900 rounded-lg p-4 md:p-6 mb-6 md:mb-10 fade-in">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-3 md:gap-6 text-center">
        <div>
          <div class="font-[family-name:var(--font-display)] text-xl md:text-3xl font-bold text-gold-500 count-up" data-count-to="400" data-prefix="$" data-suffix="K+">$400K+</div>
          <div class="text-xs text-gray-300 mt-0.5">Won for Clients</div>
        </div>
        <div>
          <div class="font-[family-name:var(--font-display)] text-xl md:text-3xl font-bold text-gold-500 count-up" data-count-to="50" data-suffix="+">50+</div>
          <div class="text-xs text-gray-300 mt-0.5">Jury Trials</div>
        </div>
        <div>
          <div class="font-[family-name:var(--font-display)] text-xl md:text-3xl font-bold text-gold-500 count-up" data-count-to="24" data-suffix="+">24+</div>
          <div class="text-xs text-gray-300 mt-0.5">Years Experience</div>
        </div>
        <div>
          <div class="font-[family-name:var(--font-display)] text-xl md:text-3xl font-bold text-gold-500 count-up" data-count-to="1000" data-suffix="s">1000s</div>
          <div class="text-xs text-gray-300 mt-0.5">Families Helped</div>
        </div>
      </div>
    </div>

    <!-- Results Cards -->
    <div class="grid grid-cols-2 lg:grid-cols-3 gap-3 md:gap-5">
      {results.map((result, index) => (
        <div
          class="bg-white p-3 md:p-5 rounded-lg shadow-sm border border-gray-100 hover:border-gold-500/30 card-lift fade-in"
          style={`transition-delay: ${index * 100}ms`}
        >
          <span class="inline-block px-2 py-0.5 bg-gold-500/10 text-gold-500 text-xs font-semibold uppercase tracking-wide rounded-full mb-2">
            {result.category}
          </span>
          <div class="font-[family-name:var(--font-display)] text-base md:text-xl font-bold text-navy-900 mb-0.5">
            {result.amount}
          </div>
          <div class="text-gold-500 font-semibold uppercase tracking-wide text-xs mb-2">
            {result.type}
          </div>
          <p class="text-text-gray text-xs leading-relaxed hidden md:block">
            {result.description}
          </p>
        </div>
      ))}
    </div>

    <!-- View All Link -->
    <div class="text-center mt-6 md:mt-8 fade-in">
      <a
        href="/results/"
        class="btn-animate inline-flex items-center px-5 py-2 md:px-6 md:py-3 bg-navy-900 hover:bg-navy-800 text-white font-semibold text-sm rounded"
      >
        View All Case Results
        <svg class="w-4 h-4 ml-2 arrow-slide" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>

    <!-- Disclaimer -->
    <p class="text-center text-xs text-text-gray/60 mt-4 md:mt-6 max-w-2xl mx-auto">
      Every case is different. Past results do not guarantee similar outcomes.
    </p>
  </div>
</section>
