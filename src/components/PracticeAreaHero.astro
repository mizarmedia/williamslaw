---
interface Props {
  title: string;
  subtitle: string;
  description: string;
}

const { title, subtitle, description } = Astro.props;
---

<section class="relative bg-navy-900 text-white py-10 md:py-16 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
      <defs>
        <pattern id="topo-hero" x="0" y="0" width="100" height="100" patternUnits="userSpaceOnUse">
          <path d="M0 50 Q25 30 50 50 T100 50" stroke="currentColor" fill="none" stroke-width="0.5" opacity="0.5"/>
          <path d="M0 30 Q25 10 50 30 T100 30" stroke="currentColor" fill="none" stroke-width="0.5" opacity="0.3"/>
          <path d="M0 70 Q25 50 50 70 T100 70" stroke="currentColor" fill="none" stroke-width="0.5" opacity="0.3"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#topo-hero)"/>
    </svg>
  </div>

  <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <p class="text-gold-400 font-semibold uppercase tracking-wider mb-4">
      {subtitle}
    </p>
    <h1 class="font-[family-name:var(--font-display)] text-2xl md:text-4xl lg:text-5xl font-bold mb-4">
      {title}
    </h1>
    <p class="text-base md:text-lg text-gray-300 max-w-2xl mx-auto leading-relaxed">
      {description}
    </p>

    <div class="mt-6 flex flex-col sm:flex-row gap-3 justify-center">
      <a
        href="/contact/"
        class="inline-flex items-center justify-center px-5 py-3 md:px-8 md:py-4 bg-gold-500 hover:bg-gold-400 text-navy-900 font-bold rounded transition-colors text-sm md:text-base"
      >
        Get a Free Case Review
      </a>
      <a
        href="tel:+12082715469"
        class="inline-flex items-center justify-center px-5 py-3 md:px-8 md:py-4 border-2 border-white/30 hover:border-white/60 text-white font-semibold rounded transition-colors text-sm md:text-base"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        (208) 271-5469
      </a>
    </div>
  </div>
</section>
