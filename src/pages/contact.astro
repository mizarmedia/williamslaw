---
import Layout from '../layouts/Layout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

const title = "Contact | Williams Law | Eagle, Idaho Attorney";
const description = "Contact attorney Matt Williams for a free consultation. Criminal defense, family law, civil litigation in Eagle, Boise, and Meridian, Idaho. (208) 271-5469";
---

<Layout title={title} description={description}>
  <main>
    <Breadcrumbs items={[{ label: 'Contact' }]} />

    <!-- Hero -->
    <section class="bg-navy-900 text-white py-10 md:py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="font-[family-name:var(--font-display)] text-2xl md:text-4xl font-bold mb-3">
          Get in Touch
        </h1>
        <p class="text-sm md:text-lg text-gray-300 max-w-2xl mx-auto">
          Ready to discuss your case? Schedule a free consultation with Matt.
        </p>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-8 md:py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-6 md:gap-10">

          <!-- Contact Form -->
          <div>
            <h2 class="font-[family-name:var(--font-display)] text-xl md:text-2xl font-bold text-navy-900 mb-3 md:mb-4">
              Request a Free Consultation
            </h2>
            <p class="text-text-gray text-sm mb-4 md:mb-6">
              Fill out the form below and Matt will get back to you within one business day.
            </p>

            <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-4">
              <div class="grid grid-cols-2 gap-3 md:gap-4">
                <div>
                  <label for="name" class="block text-xs font-medium text-navy-900 mb-1">
                    Full Name *
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-gold-500 outline-none transition-colors text-sm"
                    placeholder="Your name"
                  />
                </div>
                <div>
                  <label for="phone" class="block text-xs font-medium text-navy-900 mb-1">
                    Phone Number *
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    required
                    class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-gold-500 outline-none transition-colors text-sm"
                    placeholder="(208) 555-1234"
                  />
                </div>
              </div>

              <div>
                <label for="email" class="block text-xs font-medium text-navy-900 mb-1">
                  Email Address *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-gold-500 outline-none transition-colors text-sm"
                  placeholder="you@example.com"
                />
              </div>

              <div>
                <label for="case-type" class="block text-xs font-medium text-navy-900 mb-1">
                  Type of Case *
                </label>
                <select
                  id="case-type"
                  name="case-type"
                  required
                  class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-gold-500 outline-none transition-colors bg-white text-sm"
                >
                  <option value="">Select a case type...</option>
                  <optgroup label="Criminal Defense">
                    <option value="DUI">DUI / Drunk Driving</option>
                    <option value="Felony">Felony Charges</option>
                    <option value="Domestic Violence">Domestic Violence</option>
                    <option value="Other Criminal">Other Criminal Matter</option>
                  </optgroup>
                  <optgroup label="Family Law">
                    <option value="Divorce">Divorce</option>
                    <option value="Custody">Child Custody</option>
                    <option value="Child Support">Child Support</option>
                    <option value="Other Family">Other Family Matter</option>
                  </optgroup>
                  <optgroup label="Civil Litigation">
                    <option value="Employment">Employment Dispute</option>
                    <option value="Civil Rights">Civil Rights</option>
                    <option value="Personal Injury">Personal Injury</option>
                    <option value="Other Civil">Other Civil Matter</option>
                  </optgroup>
                  <option value="Other">Other / Not Sure</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-xs font-medium text-navy-900 mb-1">
                  Brief Description *
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="3"
                  required
                  class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-gold-500 outline-none transition-colors resize-none text-sm"
                  placeholder="Briefly describe your legal situation."
                ></textarea>
              </div>

              <div class="flex items-start gap-2">
                <input
                  type="checkbox"
                  id="consent"
                  name="consent"
                  required
                  class="mt-0.5 w-4 h-4 text-gold-500 border-gray-300 rounded focus:ring-gold-500"
                />
                <label for="consent" class="text-xs text-text-gray">
                  I understand this does not create an attorney-client relationship. All information kept confidential.
                </label>
              </div>

              <button
                type="submit"
                class="w-full px-5 py-3 bg-gold-500 hover:bg-gold-400 text-navy-900 font-bold rounded-lg transition-colors text-sm md:text-base"
              >
                Request Free Consultation
              </button>
            </form>
          </div>

          <!-- Contact Info & Map -->
          <div>
            <h2 class="font-[family-name:var(--font-display)] text-xl md:text-2xl font-bold text-navy-900 mb-4">
              Contact Information
            </h2>

            <!-- Quick Contact Cards -->
            <div class="space-y-2 md:space-y-3 mb-4 md:mb-6">
              <a
                href="tel:+12082715469"
                class="flex items-center gap-3 p-3 bg-offwhite rounded-lg hover:bg-gold-500/10 transition-colors group"
              >
                <div class="w-10 h-10 bg-gold-500 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-navy-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <div class="font-semibold text-navy-900 text-sm group-hover:text-gold-500 transition-colors">
                    (208) 271-5469
                  </div>
                  <div class="text-xs text-text-gray">Call or text anytime</div>
                </div>
              </a>

              <a
                href="mailto:matt@mattwilliams.law"
                class="flex items-center gap-3 p-3 bg-offwhite rounded-lg hover:bg-gold-500/10 transition-colors group"
              >
                <div class="w-10 h-10 bg-navy-900 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <div class="font-semibold text-navy-900 text-sm group-hover:text-gold-500 transition-colors">
                    matt@mattwilliams.law
                  </div>
                  <div class="text-xs text-text-gray">Email for non-urgent matters</div>
                </div>
              </a>

              <div class="flex items-start gap-3 p-3 bg-offwhite rounded-lg">
                <div class="w-10 h-10 bg-navy-900 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <div class="font-semibold text-navy-900 text-sm">Office Location</div>
                  <div class="text-xs text-text-gray">
                    839 E. Winding Creek Dr, Ste 200, Eagle, ID 83616
                  </div>
                </div>
              </div>

              <div class="flex items-start gap-3 p-3 bg-offwhite rounded-lg">
                <div class="w-10 h-10 bg-navy-900 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <div class="font-semibold text-navy-900 text-sm">Office Hours</div>
                  <div class="text-xs text-text-gray">
                    Mon-Fri: 9AM-5PM | <span class="text-gold-500">Evenings/weekends by appt</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Map -->
            <div class="rounded-lg overflow-hidden border border-gray-200">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2885.5!2d-116.353!3d43.6959!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDPCsDQxJzQ1LjIiTiAxMTbCsDIxJzEwLjgiVw!5e0!3m2!1sen!2sus!4v1234567890"
                width="100%"
                height="180"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Williams Law Office Location"
                class="md:h-[250px]"
              ></iframe>
            </div>

            <!-- Areas Served -->
            <div class="mt-4 p-4 bg-navy-900 text-white rounded-lg">
              <h3 class="font-semibold text-sm mb-2">Areas Served</h3>
              <div class="grid grid-cols-3 md:grid-cols-5 gap-1 text-xs text-gray-300">
                <div>Eagle</div>
                <div>Boise</div>
                <div>Meridian</div>
                <div>Nampa</div>
                <div>Caldwell</div>
                <div>McCall</div>
                <div>Ada Co</div>
                <div>Canyon Co</div>
                <div>Valley Co</div>
                <div>All Idaho</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Emergency Note -->
    <section class="py-6 bg-gold-500/10 border-t border-b border-gold-500/30">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h3 class="font-semibold text-navy-900 text-sm mb-1">Urgent Criminal Matter?</h3>
        <p class="text-text-gray text-xs mb-3">
          If you or a loved one has been arrested, call immediately.
        </p>
        <a
          href="tel:+12082715469"
          class="inline-flex items-center justify-center gap-2 px-5 py-2.5 bg-navy-900 hover:bg-navy-800 text-white font-bold text-sm rounded transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call (208) 271-5469 Now
        </a>
      </div>
    </section>

    <!-- What to Expect -->
    <section class="py-8 md:py-16 bg-offwhite">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-6 md:mb-10">
          <h2 class="font-[family-name:var(--font-display)] text-xl md:text-3xl font-bold text-navy-900 mb-2">
            What to Expect
          </h2>
          <p class="text-text-gray text-sm">
            Your first consultation is free and confidential.
          </p>
        </div>

        <div class="grid grid-cols-3 gap-3 md:gap-6">
          <div class="text-center">
            <div class="w-8 h-8 md:w-10 md:h-10 bg-gold-500 text-navy-900 rounded-full flex items-center justify-center font-bold text-sm md:text-lg mx-auto mb-2">
              1
            </div>
            <h3 class="font-semibold text-navy-900 text-xs md:text-sm mb-1">Share Your Story</h3>
            <p class="text-text-gray text-xs hidden md:block">
              Tell Matt what happened. Everything is confidential.
            </p>
          </div>
          <div class="text-center">
            <div class="w-8 h-8 md:w-10 md:h-10 bg-gold-500 text-navy-900 rounded-full flex items-center justify-center font-bold text-sm md:text-lg mx-auto mb-2">
              2
            </div>
            <h3 class="font-semibold text-navy-900 text-xs md:text-sm mb-1">Get Your Options</h3>
            <p class="text-text-gray text-xs hidden md:block">
              He'll explain the law in plain English.
            </p>
          </div>
          <div class="text-center">
            <div class="w-8 h-8 md:w-10 md:h-10 bg-gold-500 text-navy-900 rounded-full flex items-center justify-center font-bold text-sm md:text-lg mx-auto mb-2">
              3
            </div>
            <h3 class="font-semibold text-navy-900 text-xs md:text-sm mb-1">You Decide</h3>
            <p class="text-text-gray text-xs hidden md:block">
              No pressure. Move forward when you're ready.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
